{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Api error/exception response",
    "type": "object",
    "required": [
        "error"
    ],
    "properties": {
        "error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "target": {
                    "type": "string"
                }
            },
            "required": [
                "code"
            ],
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}
